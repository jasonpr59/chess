<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes">
          <exclude name="**/test/**" />
        </javac>
    </target>

    <target name="jar" depends="compile">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/player.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="server.StreamChessServer"/>
            </manifest>
        </jar>
    </target>

</project>
